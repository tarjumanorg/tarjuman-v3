---
import Layout from "../layouts/Layout.astro";
import FileDropzone from "../components/FileDropzone.svelte";
import OrderConfig from "../components/OrderConfig.svelte";
---

<Layout title="Tarjuman - Jasa Penerjemah Tersumpah Resmi">
	<main class="min-h-screen bg-background">
		<!-- Hero Section -->
		<section class="relative overflow-hidden pt-12 pb-24 sm:pt-20 sm:pb-32">
			<div
				class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
			>
			</div>

			<div class="container relative z-10 mx-auto px-4 text-center">
				<div
					id="hero-content"
					class="transition-all duration-500 ease-in-out"
				>
					<div
						class="inline-flex items-center rounded-full border border-primary/20 bg-primary/5 px-3 py-1 text-xs sm:text-sm font-medium text-primary mb-6 sm:mb-8 animate-fade-in-up"
					>
						<span class="flex h-2 w-2 rounded-full bg-primary mr-2"
						></span>
						Resmi & Diakui Kemenkumham
					</div>

					<h1
						class="mx-auto max-w-4xl font-serif text-4xl font-bold tracking-tight text-foreground sm:text-7xl mb-4 sm:mb-6 animate-fade-in-up delay-100"
					>
						Terjemahan Tersumpah.<br />
						<span class="text-primary">Resmi. Cepat.</span>
					</h1>

					<p
						class="mx-auto max-w-2xl text-sm sm:text-lg text-muted-foreground mb-8 sm:mb-12 animate-fade-in-up delay-200"
					>
						Jasa penerjemah tersumpah untuk persyaratan beasiswa
						Study in Saudi. Diakui oleh Kedutaan Besar & Universitas
						di Arab Saudi.
					</p>

					<!-- The Magic Box -->
					<div
						class="mx-auto max-w-2xl w-full rounded-2xl border bg-card p-2 shadow-2xl animate-fade-in-up delay-300"
					>
						<div
							class="rounded-xl border border-dashed border-border bg-muted/30 p-8 transition-colors hover:bg-muted/50"
						>
							<FileDropzone client:load />
						</div>
					</div>
				</div>

				<!-- Configuration Section (Appears when file is uploaded) -->
				<div class="mx-auto max-w-2xl w-full text-left mt-8">
					<OrderConfig client:idle />
				</div>
			</div>
		</section>

		<script>
			import { orderStore } from "../stores/orderStore";

			const heroContent = document.getElementById("hero-content");

			orderStore.subscribe((state) => {
				if (heroContent) {
					if (state.files.length > 0) {
						// Hide hero content
						heroContent.style.opacity = "0";
						setTimeout(() => {
							heroContent.style.display = "none";
						}, 500); // Wait for transition
					} else {
						// Show hero content
						heroContent.style.display = "block";
						// Small delay to allow display block to apply before opacity
						setTimeout(() => {
							heroContent.style.opacity = "1";
						}, 10);
					}
				}
			});
		</script>
	</main>
</Layout>

<!-- Trust Badges -->
<section class="border-y bg-muted/30 py-12">
	<div class="container mx-auto px-4 text-center">
		<p
			class="mb-6 text-sm font-medium text-muted-foreground uppercase tracking-widest"
		>
			Dipercaya Oleh
		</p>
		<div
			class="grid grid-cols-2 gap-8 md:grid-cols-4 opacity-70 grayscale transition-all hover:grayscale-0"
		>
			<div
				class="flex items-center justify-center gap-2 p-4 rounded-lg hover:bg-background/50 transition-colors"
			>
				<span class="font-serif text-lg font-bold text-foreground"
					>Kemenkumham</span
				>
			</div>
			<div
				class="flex items-center justify-center gap-2 p-4 rounded-lg hover:bg-background/50 transition-colors"
			>
				<span class="font-serif text-lg font-bold text-foreground"
					>Kemenlu</span
				>
			</div>
			<div
				class="flex items-center justify-center gap-2 p-4 rounded-lg hover:bg-background/50 transition-colors"
			>
				<span class="font-serif text-lg font-bold text-foreground"
					>Kedutaan Saudi</span
				>
			</div>
			<div
				class="flex items-center justify-center gap-2 p-4 rounded-lg hover:bg-background/50 transition-colors"
			>
				<span class="font-serif text-lg font-bold text-foreground"
					>Himpunan Penerjemah</span
				>
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes fade-in-up {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in-up {
		animation: fade-in-up 0.8s ease-out forwards;
		opacity: 0;
	}

	.delay-100 {
		animation-delay: 0.1s;
	}
	.delay-200 {
		animation-delay: 0.2s;
	}
	.delay-300 {
		animation-delay: 0.3s;
	}
</style>
