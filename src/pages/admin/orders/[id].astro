---
import Layout from "../../../layouts/Layout.astro";
import { createAstroSupabase } from "../../../lib/supabase";
import { format } from "date-fns";
import { id as localeId } from "date-fns/locale";

const { id } = Astro.params;
const supabase = createAstroSupabase(Astro);

// Auth & Admin Check
const {
    data: { user },
} = await supabase.auth.getUser();
if (!user) return Astro.redirect("/");

const { data: profile } = await supabase
    .from("profiles")
    .select("role")
    .eq("id", user.id)
    .single();

if (profile?.role !== "admin") {
    return Astro.redirect("/");
}

// Fetch order
const { data: order, error } = await supabase
    .from("orders")
    .select("*, order_files(*), profiles(*)")
    .eq("id", id)
    .single();

if (error || !order) {
    return Astro.redirect("/admin");
}

function formatPrice(price: number) {
    return new Intl.NumberFormat("id-ID", {
        style: "currency",
        currency: "IDR",
        minimumFractionDigits: 0,
    }).format(price);
}

const STATUS_OPTIONS = [
    { value: "pending_verification", label: "Menunggu Verifikasi" },
    { value: "payment_pending", label: "Menunggu Pembayaran" },
    { value: "processing", label: "Sedang Dikerjakan" },
    { value: "review", label: "Siap Direview" },
    { value: "completed", label: "Selesai" },
    { value: "cancelled", label: "Dibatalkan" },
];
---

<Layout title={`Admin: Order #${order.id.slice(0, 8)}`}>
    <nav class="border-b bg-card">
        <div
            class="container mx-auto flex h-16 items-center justify-between px-4"
        >
            <div class="flex items-center gap-2">
                <a
                    href="/admin"
                    class="text-xl font-serif font-bold text-foreground"
                    >Tarjuman Admin</a
                >
                <span class="text-muted-foreground">/</span>
                <span class="font-medium">#{order.id.slice(0, 8)}</span>
            </div>
            <div class="flex items-center gap-4">
                <a href="/admin" class="text-sm font-medium hover:underline"
                    >Back to List</a
                >
            </div>
        </div>
    </nav>

    <main class="container mx-auto px-4 py-8">
        <div class="grid gap-8 lg:grid-cols-3">
            {/* Left Column: Order Info & Files */}
            <div class="lg:col-span-2 space-y-6">
                <div class="rounded-xl border bg-card shadow-sm p-6">
                    <h2 class="text-lg font-bold mb-4">Customer Info</h2>
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div>
                            <span class="text-muted-foreground block">Name</span
                            >
                            {/* @ts-ignore */}
                            <span class="font-medium"
                                >{order.profiles?.full_name}</span
                            >
                        </div>
                        <div>
                            <span class="text-muted-foreground block"
                                >Email</span
                            >
                            {/* @ts-ignore */}
                            <span class="font-medium"
                                >{order.profiles?.email}</span
                            >
                        </div>
                        <div>
                            <span class="text-muted-foreground block"
                                >WhatsApp</span
                            >
                            {/* @ts-ignore */}
                            <span class="font-medium"
                                >{order.profiles?.whatsapp_number || "-"}</span
                            >
                        </div>
                    </div>
                </div>

                <div class="rounded-xl border bg-card shadow-sm p-6">
                    <h2 class="text-lg font-bold mb-4">Source Files</h2>
                    <div class="space-y-3">
                        {
                            order.order_files?.map((file: any) => (
                                <div class="flex items-center justify-between rounded-lg border p-3">
                                    <div class="flex items-center gap-3">
                                        <div class="h-10 w-10 bg-primary/10 rounded flex items-center justify-center text-primary">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="20"
                                                height="20"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <>
                                                    <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z" />
                                                    <polyline points="14 2 14 8 20 8" />
                                                </>
                                            </svg>
                                        </div>
                                        <div>
                                            {/* @ts-ignore */}
                                            <p class="font-medium text-sm">
                                                {file.file_path
                                                    .split("/")
                                                    .pop()}
                                            </p>
                                            <p class="text-xs text-muted-foreground">
                                                {file.page_count} pages
                                            </p>
                                        </div>
                                    </div>
                                    <a
                                        href={`${import.meta.env.PUBLIC_SUPABASE_URL}/storage/v1/object/public/orders/${file.file_path}`}
                                        target="_blank"
                                        class="text-sm font-medium text-primary hover:underline"
                                    >
                                        Download
                                    </a>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>

            {/* Right Column: Admin Actions */}
            <div class="space-y-6">
                <div
                    class="rounded-xl border bg-card shadow-sm p-6 sticky top-8"
                >
                    <h2 class="text-lg font-bold mb-4">Admin Controls</h2>

                    <form
                        action="/api/admin/update-order"
                        method="POST"
                        class="space-y-4"
                    >
                        <input type="hidden" name="order_id" value={order.id} />

                        <div>
                            <label class="text-sm font-medium block mb-1"
                                >Status</label
                            >
                            <select
                                name="status"
                                class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
                            >
                                {
                                    STATUS_OPTIONS.map((opt) => (
                                        <option
                                            value={opt.value}
                                            selected={
                                                order.status === opt.value
                                            }
                                        >
                                            {opt.label}
                                        </option>
                                    ))
                                }
                            </select>
                        </div>

                        <div>
                            <label class="text-sm font-medium block mb-1"
                                >Page Count (Verified)</label
                            >
                            <input
                                type="number"
                                name="page_count_estimated"
                                value={order.page_count_estimated}
                                class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
                            />
                        </div>

                        <div>
                            <label class="text-sm font-medium block mb-1"
                                >Final Price</label
                            >
                            <input
                                type="number"
                                name="final_price"
                                value={order.final_price ||
                                    order.original_price}
                                class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
                            />
                            <p class="text-xs text-muted-foreground mt-1">
                                Original: {formatPrice(order.original_price)}
                            </p>
                        </div>

                        <button
                            type="submit"
                            class="w-full rounded-md bg-primary px-4 py-2 text-primary-foreground hover:bg-primary/90 font-medium"
                        >
                            Update Order
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>
</Layout>
