---
import Layout from "../../layouts/Layout.astro";
import { createClient } from "../../lib/supabase";

const { id } = Astro.params;
const supabase = createClient(Astro);

if (!id) return Astro.redirect("/404");

// Auth Check
const {
    data: { user },
} = await supabase.auth.getUser();

if (!user) return Astro.redirect("/login");

// Fetch Order
const { data: order, error } = await supabase
    .from("orders")
    .select("*, order_files(*)")
    .eq("id", id)
    .single();

if (error || !order) return Astro.redirect("/404");
if (order.user_id !== user.id) return Astro.redirect("/404");

function formatPrice(price: number) {
    return new Intl.NumberFormat("id-ID", {
        style: "currency",
        currency: "IDR",
        minimumFractionDigits: 0,
    }).format(price);
}

function getStatusLabel(status: string) {
    const labels: Record<string, string> = {
        payment_pending: "Menunggu Pembayaran",
        paid: "Dibayar",
        processing: "Sedang Dikerjakan",
        completed: "Selesai",
        cancelled: "Dibatalkan",
    };
    return labels[status] || status;
}

function getStatusBadge(status: string) {
    switch (status) {
        case "payment_pending":
            return "bg-yellow-100 text-yellow-800 border-yellow-200";
        case "paid":
        case "processing":
            return "bg-blue-100 text-blue-800 border-blue-200";
        case "completed":
            return "bg-green-100 text-green-800 border-green-200";
        case "cancelled":
            return "bg-red-100 text-red-800 border-red-200";
        default:
            return "bg-gray-100 text-gray-800 border-gray-200";
    }
}
---

<Layout title={`Order #${id.slice(0, 8)} - Tarjuman`}>
    <div class="container mx-auto py-10 px-4 max-w-3xl">
        <div class="mb-6">
            <a
                href="/dashboard"
                class="text-sm text-muted-foreground hover:text-primary inline-flex items-center gap-1"
            >
                &larr; Kembali ke Pesanan Saya
            </a>
        </div>

        <div
            class="rounded-xl border border-border bg-card overflow-hidden shadow-sm"
        >
            <!-- Header -->
            <div
                class="p-6 border-b border-border bg-muted/20 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4"
            >
                <div>
                    <h1 class="text-2xl font-bold font-serif">
                        Detail Pesanan
                    </h1>
                    <p class="text-muted-foreground text-sm font-mono">
                        ID: {order.id}
                    </p>
                </div>
                <span
                    class={`px-3 py-1 rounded-full text-sm font-bold border ${getStatusBadge(order.status || "")}`}
                >
                    {getStatusLabel(order.status || "")}
                </span>
            </div>

            <div class="p-6 space-y-8">
                <!-- Timeline/Status Info -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <h3 class="font-semibold text-foreground mb-2">
                            Informasi Order
                        </h3>
                        <dl class="space-y-2 text-sm">
                            <div class="flex justify-between">
                                <dt class="text-muted-foreground">
                                    Tangal Pesan
                                </dt>
                                <dd class="font-medium">
                                    {
                                        new Date(
                                            order.created_at,
                                        ).toLocaleDateString("id-ID", {
                                            day: "numeric",
                                            month: "long",
                                            year: "numeric",
                                        })
                                    }
                                </dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="text-muted-foreground">
                                    Paket Kecepatan
                                </dt>
                                <dd class="font-medium">
                                    {order.urgency_days} Hari Kerja
                                </dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="text-muted-foreground">
                                    Total Tagihan
                                </dt>
                                <dd class="font-bold text-primary">
                                    {formatPrice(order.final_price || 0)}
                                </dd>
                            </div>
                        </dl>
                    </div>

                    <div>
                        <h3 class="font-semibold text-foreground mb-2">
                            Opsi Pengiriman
                        </h3>
                        <dl class="space-y-2 text-sm">
                            <div class="flex justify-between">
                                <dt class="text-muted-foreground">
                                    Hard Copy (Fisik)
                                </dt>
                                <dd class="font-medium">
                                    {
                                        order.physical_copy
                                            ? "Ya (JNE/J&T)"
                                            : "Tidak (Softcopy Only)"
                                    }
                                </dd>
                            </div>
                            {
                                order.physical_copy && (
                                    <div class="mt-2 text-xs bg-muted p-2 rounded border">
                                        <span class="font-bold block mb-1">
                                            Alamat:
                                        </span>
                                        {order.hard_copy_address}
                                    </div>
                                )
                            }
                        </dl>
                    </div>
                </div>

                <!-- Files -->
                <div>
                    <h3 class="font-semibold text-foreground mb-4">
                        Dokumen Asli
                    </h3>
                    <div class="space-y-3">
                        {
                            order.order_files &&
                                order.order_files.map((file: any) => (
                                    <div class="flex items-center justify-between p-3 rounded-lg border border-border bg-background">
                                        <div class="flex items-center gap-3 overflow-hidden">
                                            <div class="h-8 w-8 rounded bg-primary/10 flex items-center justify-center text-primary font-bold text-xs">
                                                PDF
                                            </div>
                                            <div class="truncate">
                                                <p
                                                    class="text-sm font-medium truncate max-w-[200px] sm:max-w-xs"
                                                    title={file.file_path}
                                                >
                                                    {file.file_path
                                                        .split("/")
                                                        .pop()}
                                                </p>
                                                <p class="text-xs text-muted-foreground">
                                                    {file.page_count} Halaman
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                ))
                        }
                    </div>
                </div>

                <!-- Warning/Help -->
                <div
                    class="bg-blue-50 border border-blue-200 rounded-lg p-4 flex gap-3 text-sm text-blue-900"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-info shrink-0"
                        ><circle cx="12" cy="12" r="10"></circle><path
                            d="M12 16v-4"></path><path d="M12 8h.01"
                        ></path></svg
                    >
                    <div>
                        <p class="font-semibold mb-1">Butuh bantuan?</p>
                        <p>
                            Jika ada kesalahan data atau ingin mengubah pesanan,
                            segera hubungi admin via <a
                                href="#"
                                class="underline hover:text-blue-700"
                                >WhatsApp</a
                            >.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Footer Actions -->
            <div
                class="bg-muted/20 p-6 border-t border-border flex justify-end"
            >
                {
                    order.status === "payment_pending" && (
                        <a
                            href={`/payment/${order.id}`}
                            class="inline-flex items-center justify-center rounded-lg bg-primary px-4 py-2 text-sm font-bold text-primary-foreground hover:bg-primary/90 transition-colors"
                        >
                            Bayar Tagihan
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</Layout>
