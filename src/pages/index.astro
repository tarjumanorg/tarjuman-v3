---
import Layout from "../layouts/Layout.astro";
import FileDropzone from "../components/FileDropzone.svelte";
import OrderConfig from "../components/OrderConfig.svelte";
import StructuredData from "../components/StructuredData.astro";
import { PRICING_TIERS, formatPrice } from "../lib/pricing";

const minPricePrice = Math.min(...PRICING_TIERS.map((t) => t.price));
const maxPricePrice = Math.max(...PRICING_TIERS.map((t) => t.price));
const minPriceString = formatPrice(minPricePrice)
	.replace(",00", "")
	.replace("Rp", "Rp ");
const maxPriceString = formatPrice(maxPricePrice)
	.replace(",00", "")
	.replace("Rp", "Rp ");

const seoData = {
	title: "Jasa Penerjemah Tersumpah Bahasa Arab Resmi & Online | Tarjuman",
	description: `Jasa penerjemah tersumpah bahasa Arab online. Harga mulai ${minPriceString}/halaman. Penerjemah resmi SK Kemenkumham untuk keperluan beasiswa Saudi, kedutaan, & legal.`,
};

const localBusinessData = {
	name: "Tarjuman",
	image: "https://tarjuman.org/og-image.webp",
	"@id": "https://tarjuman.org",
	url: "https://tarjuman.org",
	priceRange: `${minPriceString} - ${maxPriceString}`,
	description: seoData.description,
	address: {
		"@type": "PostalAddress",
		addressCountry: "ID",
	},
};
---

<Layout title={seoData.title} description={seoData.description}>
	<StructuredData type="LocalBusiness" data={localBusinessData} />
	<main class="min-h-screen bg-background">
		<!-- Promo Banner -->
		<aside
			class="bg-gradient-to-r from-primary/90 to-primary text-primary-foreground px-4 py-3 text-center"
		>
			<p class="text-sm font-medium">
				ðŸŽ‰ <span class="font-bold">PROMO LAUNCH:</span> Gunakan kode <span
					class="font-bold underline cursor-pointer bg-white/20 px-1.5 py-0.5 rounded ml-1 border border-white/30 hover:bg-white/30 transition-colors"
					onclick="navigator.clipboard.writeText('LAUNCH50'); alert('Kode LAUNCH50 disalin!')"
					>LAUNCH50</span
				> untuk diskon 30% (Terbatas untuk 50 orang pertama!)
			</p>
		</aside>

		<!-- Hero Section -->
		<section class="relative overflow-hidden pt-4 pb-16 sm:pt-8 sm:pb-24">
			<div
				class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
			>
