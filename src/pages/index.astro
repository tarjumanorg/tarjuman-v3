---
import Layout from "../layouts/Layout.astro";
import FileDropzone from "../components/FileDropzone.svelte";
---

<Layout title="Tarjuman - Jasa Penerjemah Tersumpah Resmi">
    <main class="flex min-h-screen flex-col">
        <!-- Hero Section -->
        <section
            class="relative bg-gradient-to-br from-primary to-primary-foreground py-20 text-white overflow-hidden"
        >
            <!-- Background Pattern (optional) -->
            <div class="absolute inset-0 opacity-10 bg-[url('/pattern.svg')]">
            </div>

            <div class="container relative z-10 mx-auto px-4 text-center">
                <h1
                    class="mb-6 font-serif text-4xl md:text-5xl font-bold leading-tight"
                >
                    Terjemahan Resmi untuk<br />
                    <span class="text-accent text-[#D97706]"
                        >Masa Depan Akademik</span
                    > Anda
                </h1>
                <p
                    class="mb-10 text-lg text-primary-foreground/90 max-w-2xl mx-auto"
                >
                    Layanan penerjemah tersumpah (Sworn Translator) Bahasa Arab
                    & Inggris. Diakui oleh Kedutaan Besar Arab Saudi dan
                    Universitas di Timur Tengah.
                </p>

                <!-- Call to Action / Dropzone wrapper -->
                <div
                    class="mx-auto max-w-3xl rounded-xl bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 p-6 shadow-2xl text-foreground ring-1 ring-border/50"
                >
                    <h2 class="mb-4 text-xl font-semibold text-primary">
                        Mulai Disini - Upload Dokumen Anda
                    </h2>
                    <FileDropzone client:load />
                </div>
            </div>
        </section>

        <!-- Features / Trust Section -->
        <section class="py-16 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="grid md:grid-cols-3 gap-8 text-center">
                    <div
                        class="p-6 rounded-lg bg-background shadow-sm border border-border"
                    >
                        <div
                            class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-primary"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="text-xl font-semibold mb-2">
                            Tersumpah & Resmi
                        </h3>
                        <p class="text-muted-foreground">
                            SK Gubernur DKI Jakarta. Diakui Kemenkumham, Kemlu,
                            dan Kedutaan Arab Saudi.
                        </p>
                    </div>
                    <div
                        class="p-6 rounded-lg bg-background shadow-sm border border-border"
                    >
                        <div
                            class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-primary"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><circle cx="12" cy="12" r="10"
                                ></circle><polyline points="12 6 12 12 16 14"
                                ></polyline></svg
                            >
                        </div>
                        <h3 class="text-xl font-semibold mb-2">
                            Layanan Kilat
                        </h3>
                        <p class="text-muted-foreground">
                            Opsi layanan Express (24 jam) untuk kebutuhan
                            mendesak Anda.
                        </p>
                    </div>
                    <div
                        class="p-6 rounded-lg bg-background shadow-sm border border-border"
                    >
                        <div
                            class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-primary"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><rect
                                    x="3"
                                    y="11"
                                    width="18"
                                    height="11"
                                    rx="2"
                                    ry="2"></rect><path
                                    d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg
                            >
                        </div>
                        <h3 class="text-xl font-semibold mb-2">
                            Aman & Terpercaya
                        </h3>
                        <p class="text-muted-foreground">
                            Data dokumen Anda dijaga kerahasiaannya dengan
                            sistem keamanan enkripsi.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
