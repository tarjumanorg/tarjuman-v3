---
import Layout from "../layouts/Layout.astro";
import FileDropzone from "../components/FileDropzone.svelte";
import OrderConfig from "../components/OrderConfig.svelte";
---

<Layout title="Tarjuman - Jasa Penerjemah Tersumpah Modern">
	<main class="min-h-screen bg-background">
		<!-- Hero Section -->
		<section class="relative overflow-hidden pt-4 pb-24 sm:pt-8 sm:pb-32">
			<div
				class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
			>
			</div>

			<div class="container relative z-10 mx-auto px-4 text-center">
				<div
					id="hero-content"
					class="transition-all duration-500 ease-in-out"
				>
					<!-- UPDATED: Label yang jujur & profesional -->
					<div
						class="inline-flex items-center rounded-full border border-primary/20 bg-primary/5 px-3 py-1 text-xs sm:text-sm font-medium text-primary mb-6 sm:mb-8 animate-in fade-in slide-in-from-bottom-4 duration-700"
					>
						<span class="flex h-2 w-2 rounded-full bg-primary mr-2"
						></span>
						Mitra Penerjemah Resmi SK Kemenkumham
					</div>

					<!-- UPDATED: Headline "Modern" sesuai request -->
					<h1
						class="mx-auto max-w-4xl font-serif text-4xl font-bold tracking-tight text-foreground sm:text-7xl mb-4 sm:mb-6 animate-in fade-in slide-in-from-bottom-4 duration-700 delay-100"
					>
						Terjemah Tersumpah.<br />
						<span class="text-primary">Praktis. Tanpa Ribet.</span>
					</h1>

					<!-- UPDATED: Deskripsi menggabungkan Tech + Legal + Saudi -->
					<p
						class="mx-auto max-w-2xl text-sm sm:text-lg text-muted-foreground mb-6 sm:mb-8 animate-in fade-in slide-in-from-bottom-4 duration-700 delay-200"
					>
						Dokumen dikerjakan langsung oleh penerjemah resmi
						negara. Hasil valid untuk keperluan kedutaan dan
						universitas global, khususnya persyaratan beasiswa <strong
							class="text-foreground">Study in Saudi</strong
						>.
					</p>

					<!-- The Magic Box -->
					<div
						class="mx-auto max-w-2xl w-full rounded-2xl border bg-card p-2 shadow-2xl animate-in fade-in slide-in-from-bottom-4 duration-700 delay-300"
					>
						<div
							class="rounded-xl border border-dashed border-border bg-muted/30 p-8 transition-colors hover:bg-muted/50"
						>
							<FileDropzone client:load />
						</div>
					</div>
				</div>

				<!-- Configuration Section (Appears when file is uploaded) -->
				<div class="mx-auto max-w-2xl w-full text-left mt-8">
					<OrderConfig client:idle />
				</div>
			</div>
		</section>

		<script>
			import { orderStore } from "../stores/orderStore";

			const heroContent = document.getElementById("hero-content");

			orderStore.subscribe((state) => {
				if (heroContent) {
					if (state.files.length > 0) {
						// Hide hero content
						heroContent.classList.add(
							"opacity-0",
							"pointer-events-none",
						);
						setTimeout(() => {
							heroContent.style.display = "none";
						}, 500); // Wait for transition
					} else {
						// Show hero content
						heroContent.style.display = "block";
						// Small delay to allow display block to apply before opacity
						requestAnimationFrame(() => {
							heroContent.classList.remove(
								"opacity-0",
								"pointer-events-none",
							);
						});
					}
				}
			});
		</script>
	</main>
</Layout>

<!-- Trust Badges -->
<section class="border-y bg-muted/30 py-12">
	<div class="container mx-auto px-4 text-center">
		<!-- UPDATED: Judul diubah agar aman secara hukum -->
		<!-- Jangan pakai "Dipercaya Oleh" jika mereka bukan klien langsung -->
		<p
			class="mb-6 text-sm font-medium text-muted-foreground uppercase tracking-widest"
		>
			Hasil Terjemahan Diterima Di
		</p>
		<div
			class="grid grid-cols-2 gap-8 md:grid-cols-4 opacity-70 grayscale transition-all hover:grayscale-0"
		>
			<div
				class="flex items-center justify-center gap-2 p-4 rounded-lg hover:bg-background/50 transition-colors"
			>
				<span class="font-serif text-lg font-bold text-foreground"
					>Kemenkumham</span
				>
			</div>
			<div
				class="flex items-center justify-center gap-2 p-4 rounded-lg hover:bg-background/50 transition-colors"
			>
				<span class="font-serif text-lg font-bold text-foreground"
					>Kemenlu</span
				>
			</div>
			<div
				class="flex items-center justify-center gap-2 p-4 rounded-lg hover:bg-background/50 transition-colors"
			>
				<span class="font-serif text-lg font-bold text-foreground"
					>Kedutaan Besar</span
				>
			</div>
			<div
				class="flex items-center justify-center gap-2 p-4 rounded-lg hover:bg-background/50 transition-colors"
			>
				<span class="font-serif text-lg font-bold text-foreground"
					>Universitas Global</span
				>
			</div>
		</div>
	</div>
</section>
