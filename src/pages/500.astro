---
import Layout from "../layouts/Layout.astro";

interface Props {
    error: unknown;
}

const { error } = Astro.props;

// Log error in dev/server console
console.error("500 Error:", error);
---

<Layout title="Terjadi Kesalahan - Tarjuman">
    <main
        class="grid min-h-[80vh] place-items-center px-6 py-24 sm:py-32 lg:px-8"
    >
        <div class="text-center">
            <p class="text-base font-semibold text-destructive">500</p>
            <h1
                class="mt-4 text-3xl font-bold tracking-tight text-foreground sm:text-5xl"
            >
                Terjadi kesalahan pada server
            </h1>
            <p class="mt-6 text-base leading-7 text-muted-foreground">
                Maaf, sesuatu berjalan tidak semestinya. Tim kami telah
                diberitahu.
            </p>
            <div class="mt-10 flex items-center justify-center gap-x-6">
                <a
                    href="/"
                    class="rounded-md bg-primary px-3.5 py-2.5 text-sm font-semibold text-primary-foreground shadow-sm hover:bg-primary/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary"
                >
                    Kembali ke Beranda
                </a>
            </div>
        </div>
    </main>
</Layout>
