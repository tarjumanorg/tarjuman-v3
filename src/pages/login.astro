---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Masuk - Tarjuman">
    <div
        class="flex min-h-screen items-center justify-center bg-background p-4"
    >
        <div
            class="w-full max-w-md rounded-lg border border-border bg-card p-8 shadow-lg"
        >
            <div class="mb-8 text-center">
                <!-- Logo Placeholder -->
                <div
                    class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-primary/10"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-primary"
                        ><path d="M12 19l7-7 3 3-7 7-3-3z"></path><path
                            d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"
                        ></path><path d="M2 2l7.586 7.586"></path><circle
                            cx="11"
                            cy="11"
                            r="2"></circle></svg
                    >
                </div>
                <h1 class="mb-2 font-serif text-3xl font-bold text-primary">
                    Tarjuman
                </h1>
                <p class="text-muted-foreground">
                    Jasa Penerjemah Tersumpah Resmi<br />untuk Study In Saudi
                </p>
            </div>

            <div class="space-y-4">
                <a
                    href="/api/auth/signin"
                    class="flex w-full items-center justify-center gap-3 rounded-md border border-input bg-white px-4 py-3 font-medium text-gray-700 shadow-sm transition-colors hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                >
                    <svg class="h-5 w-5" viewBox="0 0 24 24">
                        <path
                            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                            fill="#4285F4"></path>
                        <path
                            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                            fill="#34A853"></path>
                        <path
                            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                            fill="#FBBC05"></path>
                        <path
                            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                            fill="#EA4335"></path>
                    </svg>
                    Masuk dengan Google
                </a>
            </div>

            <p class="mt-8 text-center text-xs text-muted-foreground">
                Dengan masuk, Anda menyetujui<br />Syarat & Ketentuan kami.
            </p>
        </div>
    </div>
</Layout>
