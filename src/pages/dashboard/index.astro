---
import Layout from "../../layouts/Layout.astro";
import { createClient } from "../../lib/supabase";

const supabase = createClient(Astro);
const {
    data: { user },
} = await supabase.auth.getUser();

if (!user) {
    return Astro.redirect("/login");
}
---

<Layout title="Dashboard - Tarjuman">
    <div class="container mx-auto py-10 px-4">
        <div class="mb-8 flex items-center justify-between">
            <h1 class="font-serif text-3xl font-bold text-primary">
                Dashboard
            </h1>
            <div class="flex items-center gap-4">
                <span class="text-sm text-muted-foreground">{user.email}</span>
                <a
                    href="/api/auth/signout"
                    class="rounded-md border border-input bg-background px-4 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground"
                >
                    Keluar
                </a>
            </div>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <!-- Status Card -->
            <div class="rounded-lg border border-border bg-card p-6 shadow-sm">
                <h3 class="mb-2 font-semibold text-lg">Status Pesanan</h3>
                <p class="text-muted-foreground">Belum ada pesanan aktif.</p>
                <div class="mt-4">
                    <a
                        href="/"
                        class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring"
                    >
                        Buat Pesanan Baru
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>
