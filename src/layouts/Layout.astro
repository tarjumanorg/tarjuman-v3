---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO -->
		<title>
			{Astro.props.title || "Tarjuman - Jasa Penerjemah Tersumpah Resmi"}
		</title>
		<meta
			name="description"
			content="Jasa penerjemah tersumpah (sworn translator) resmi untuk persyaratan beasiswa Study in Saudi. Diakui Kemenkumham, Kedutaan, & Universitas di Arab Saudi. Cepat & Terpercaya."
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://tarjuman.org/" />
		<meta
			property="og:title"
			content="Tarjuman - Jasa Penerjemah Tersumpah Resmi"
		/>
		<meta
			property="og:description"
			content="Jasa penerjemah tersumpah resmi untuk beasiswa Saudi. Diakui Kemenkumham & Kedutaan. Pesan sekarang!"
		/>
		<meta property="og:image" content="https://tarjuman.org/og-image.jpg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://tarjuman.org/" />
		<meta
			property="twitter:title"
			content="Tarjuman - Jasa Penerjemah Tersumpah Resmi"
		/>
		<meta
			property="twitter:description"
			content="Jasa penerjemah tersumpah resmi untuk beasiswa Saudi. Diakui Kemenkumham & Kedutaan."
		/>
		<meta
			property="twitter:image"
			content="https://tarjuman.org/og-image.jpg"
		/>
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
