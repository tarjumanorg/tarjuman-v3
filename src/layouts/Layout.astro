---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { SEO } from "astro-seo";

// Import Fonts
import "@fontsource-variable/plus-jakarta-sans";
import "@fontsource-variable/lora";

export interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
	type?: string;
}

const {
	title = "Tarjuman - Jasa Penerjemah Tersumpah Resmi",
	description = "Jasa penerjemah tersumpah (sworn translator) resmi untuk persyaratan beasiswa Study in Saudi. Diakui Kemenkumham, Kedutaan, & Universitas di Arab Saudi. Cepat & Terpercaya.",
	image = "https://tarjuman.org/og-image.jpg",
	canonical = Astro.url.href,
	type = "website",
} = Astro.props;
---

<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/icon.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- Dynamic SEO handled by astro-seo -->
		<SEO
			title={title}
			description={description}
			canonical={canonical}
			openGraph={{
				basic: {
					title,
					type,
					image,
					url: canonical,
				},
				optional: {
					description,
					locale: "id_ID",
					siteName: "Tarjuman",
				},
			}}
			twitter={{
				card: "summary_large_image",
				title,
				description,
				image,
				imageAlt: title,
			}}
		/>

		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-JDBZ1K6V1V"
		></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-JDBZ1K6V1V");
		</script>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
